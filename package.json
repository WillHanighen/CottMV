{
  "name": "cottmv",
  "version": "0.1.0",
  "description": "A beginner-friendly home media vault - simple video streaming and management",
  "module": "src/server/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "npx convex dev --once && bun build:css --once && bun run --watch src/server/index.ts",
    "build": "bun build src/server/index.ts --outdir dist --target bun",
    "build:css": "bunx tailwindcss -i ./public/css/input.css -o ./public/static/css/output.css --minify",
    "build:css:watch": "bunx tailwindcss -i ./public/css/input.css -o ./public/static/css/output.css --watch",
    "start": "bun run dist/index.js",
    "convex:dev": "npx convex dev",
    "convex:deploy": "npx convex deploy",
    "convex:init": "npx convex dev --once",
    "db:push": "npx convex deploy",
    "cleanup": "bun run scripts/cleanup.ts",
    "setup": "bun install && npm run convex:init && bun run build:css"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "baseline-browser-mapping": "^2.9.15",
    "caniuse-lite": "^1.0.30001765",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.4",
    "hono": "^4.6.0",
    "lucide-react": "^0.563.0",
    "nanoid": "^5.0.9",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0"
  }
}
